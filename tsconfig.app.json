{
  "extends": "./tsconfig.base.json",
  "include": [
    "types/global.d.ts",
    "types/web/*.d.ts",
    "env.d.ts",
    "components.d.ts",
    "source/web/**/*.ts",
    "source/web/**/*.tsx"
  ],
  "exclude": ["source/web/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "types": [],
    "paths": {
      "@/*": ["source/web/*"]
    },

    /* JSX */
    "jsx": "react-jsx" // preserve
    // "jsxImportSource": "react" |  "@emotion/react" | "solid-js,
    // "esModuleInterop": true,
    // "allowSyntheticDefaultImports": true,
    // "resolveJsonModule": true
  }
}
