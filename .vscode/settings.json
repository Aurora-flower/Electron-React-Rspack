{
  "typescript.tsdk": "node_modules/typescript/lib",
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.indentSize": "tabSize",
  "editor.formatOnPaste": false,

  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  "prettier.enable": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },

  "eslint.validate": ["javascript", "typescript"],

  "files.associations": {
    "*.css": "tailwindcss"
  },

  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "tsconfig.json": "tsconfig.*.json, env.d.ts, .eslint*, eslint*, biome.json, .prettier*, prettier*, tailwind.config.js, postcss.config.js, commitlint.config.js",
    ".gitignore": ".git*",
    "README.md": "README.*.md, LICENSE, CHANGELOG.md, CODE_OF_CONDUCT.md",
    "package.json": "package-lock.json, pnpm*, .yarnrc*, yarn*, .editorconfig, .npmrc, .hintrc, electron-builder.yml"
  },

  "json.schemas": [
    {
      "fileMatch": ["tsconfig.node.json"],
      "url": "https://json.schemastore.org/tsconfig.json"
    },
    {
      "fileMatch": ["package.json"],
      "url": "https://json.schemastore.org/package.json"
    }
  ]
}
