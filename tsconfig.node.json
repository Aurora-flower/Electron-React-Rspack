{
  "extends": "@tsconfig/node22/tsconfig.json", // "@electron-toolkit/tsconfig/tsconfig.node.json", // "@tsconfig/node22/tsconfig.json"
  "include": [
    "types/global.d.ts",
    "types/electron/*.d.ts",
    "source/electron/**/*.ts"
  ],
  "compilerOptions": {
    // "strict": true,
    "lib": ["ES2022"],
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "baseUrl": ".",
    "module": "ESNext",
    "types": ["node", "electron"],
    "moduleResolution": "node",
    "paths": {
      "@main/*": ["source/electron/*"]
    }
  }
}
