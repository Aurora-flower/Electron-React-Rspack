{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "app/**/*",
      "**/node_modules/**/*",
      "release/**/*",
      "**/dist/**/*",
      "test/**/*"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "formatWithErrors": true,
    "lineEnding": "lf"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noUselessElse": "off",
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noExplicitAny": "info",
        "noSuspiciousSemicolonInJsx": "error"
      },
      "nursery": {
        "noOctalEscape": "error"
      },
      "complexity": {
        "noStaticOnlyClass": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "indentStyle": "space",
      "lineWidth": 80,
      "trailingCommas": "none",
      "semicolons": "asNeeded",
      "arrowParentheses": "asNeeded",
      "quoteProperties": "preserve",
      "indentWidth": 2
    },
    "globals": ["$", "_"]
  },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": false
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "lineWidth": 80
    }
  }
}
